    <title>{% block title %}Welcome!{% endblock %}</title>

<link rel="stylesheet" href="{{ asset('tarteaucitron/css/tarteaucitron.css') }}">
<link rel="stylesheet" href="{{ asset('tarteaucitron/css/tarteaucitron.min.css') }}">



    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" href="{{ asset('divers/images/favicon.png') }}" type="image/x-icon">
    <link rel="shortcut icon" href="{{ asset('divers/images/favicon.png') }}" type="image/x-icon">

    <!-- Custom Styles -->
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/index.css') }}">
        <link rel="stylesheet" href="{{ asset('css/login.css') }}">
        <link rel="stylesheet" href="{{ asset('css/register.css') }}">
    {% endblock %}

    <!-- ‚úÖ Tarteaucitron.js (Gestion des cookies) -->
    <script src="/tarteaucitron/tarteaucitron.min.js"></script>
    <script>
        tarteaucitron.init({
            "privacyUrl": "", /* URL de la politique de confidentialit√© */
            "bodyPosition": "top", /* Place la banni√®re au d√©but du <body> */
            "hashtag": "#tarteaucitron",
            "cookieName": "tarteaucitron",
            "orientation": "middle", /* Position de la banni√®re (top - bottom - popup - banner) */
            "groupServices": true, /* Grouper les services */
            "showDetailsOnClick": true, /* D√©plier les d√©tails */
            "serviceDefaultState": "wait", /* Statut par d√©faut */
            "showAlertSmall": false, /* D√©sactiver la mini-banni√®re */
            "cookieslist": false, /* Masquer la liste des cookies */
            "closePopup": true, /* Fermer la banni√®re avec un X */
            "showIcon": true, /* Afficher l'ic√¥ne cookie */
            "iconPosition": "BottomRight", /* Position de l'ic√¥ne */
            "adblocker": false,
            "DenyAllCta": true, /* Bouton "Tout refuser" */
            "AcceptAllCta": true, /* Bouton "Tout accepter" */
            "highPrivacy": true, /* Consentement obligatoire */
            "handleBrowserDNTRequest": false, /* D√©sactiver Do Not Track */
            "removeCredit": true, /* Supprimer le cr√©dit tarteaucitron */
            "moreInfoLink": true,
            "useExternalCss": false,
            "useExternalJs": false,
            "googleConsentMode": true, /* Google Consent Mode v2 */
            "partnersList": true, /* Afficher la liste des partenaires */
            "lang": "fr" /* üìå D√©finir la langue en fran√ßais */
        });

        // Ajouter les services √† g√©rer avec Tarteaucitron
        (tarteaucitron.job = tarteaucitron.job || []).push('gcmanalyticsstorage');
        (tarteaucitron.job = tarteaucitron.job || []).push('gcmfunctionality');
        (tarteaucitron.job = tarteaucitron.job || []).push('gcmsecurity');
        (tarteaucitron.job = tarteaucitron.job || []).push('instagram');
		(tarteaucitron.job = tarteaucitron.job || []).push('facebook');
    </script>

</head>
<body>
<div class="fb-like" data-layout="standard" data-action="like" data-share="true"></div>
<div class="instagram_post" postID="postID" width="width" height="height"></div>
    <!-- ‚úÖ Header -->
    {{ include('elements/header.html.twig') }}

    <!-- ‚úÖ Contenu principal -->
    <div>{% block body %}{% endblock %}</div>

    <!-- ‚úÖ Footer -->
